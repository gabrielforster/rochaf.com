---
import type { Experiences } from "../../types";

const { title, details } = Astro.props as Experiences;
---

<section
  class="flex items-start justify-between flex-col sm:flex-row dark:text-light mt-4"
>
  <h2 class="w-[15rem] text-xl underline">{title}</h2>
  <div class="w-full">
    {
      details.map((item) => (
        <div class="my-4 sm:my-2" id={item.id}>
          <div class="flex justify-between items-center flex-wrap">
            <h3 class="text-xl font-semibold">{item.name}</h3>
            <p class="text-sm dark:text-gray">
              {item.startDate && new Date(item.startDate).toLocaleDateString()}
              {item.endDate && " - " + new Date(item.endDate).toLocaleDateString()}
            </p>
          </div>
          <p class="text-sm text-blue">{item.location}</p>
          <p class="text-md mt-3">{item.description}</p>
          <ul class="mt-3">
            {item.links.map((item) => (
              <li class="text-sm mt-[1px] underline">
                <a href={item.url} target="_blank">
                  {item.label}
                </a>
              </li>
            ))}
          </ul>
          <div class="w-full mt-2">
            <p>Stack</p>
            <ul class="flex mt-1">
              {item.tags.map((item) => (
                <li class="dark:text-gray py-1 px-2 mr-1 rounded bg-gray-200 dark:bg-zinc-600">{item}</li>
              ))}
            </ul>
          </div>
        </div>
      ))
    }
  </div>
</section>

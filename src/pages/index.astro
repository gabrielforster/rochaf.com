---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../config';
import { experiences, projects, personal_links } from '../data';
import InfoContainer from '../components/home/InfoContainer.astro';

const PROFILE_PICTURE = 'https://github.com/gabrielforster.png'
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header title={SITE_TITLE} />
		<main>
			<section class="flex mt-10">
				<div>
					<p class="font-bold text-2xl">I'm</p>
					<h2 class="font-extrabold text-transparent text-7xl bg-clip-text bg-gradient-to-r from-purple-400 to-blue-600">Gabriel Rocha</h2>
					<p class="font-bold text-2xl">18, Fullstack developer</p>
			
					<p>
						Developer since 17, had my first contact with code when I was 15 during the pandemic, that time I built a <a class="underline" href="/projects/#c-calc">terminal calculator with C language</a>
					</p>
				</div>

				<img src={PROFILE_PICTURE} class="ml-40 my-auto max-h-96 h-auto max-w-auto self-center border-4 border-sky-500 rounded-full object-cover object-center overflow-hidden"/>
			</section>

			<section>
				<InfoContainer title="Experiences" details={experiences} />

				<InfoContainer title="Projects" details={projects} />
			</section>

		</main>
		<Footer />
	</body>
</html>
